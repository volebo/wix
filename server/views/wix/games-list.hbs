<section class="vlb-widget">{{~!-- --~}}
	<ul class="game-list">
	{{~#each games as |game|~}}
		<li class="game">{{~!-- --~}}
			<time datetime="">
				{{~formatDate game.dateFrom day="2-digit" month="2-digit" year="numeric" hour="2-digit" minute="2-digit"~}}
			</time>{{~!-- --~}}
			<span class="teams"> <strong class="team-name">{{game.homeTeam.name}}</strong> : <strong class="team-name">{{game.awayTeam.name}}</strong></span>{{~!-- --~}}
			<span class="gym"> [<span class="gym-name">{{game.gym.name}}</span>] </span>{{~!-- --~}}
			{{formatMessage "Судья"}}: <span class="referee-name">
			{{~#if game.referee.nameShort~}}
				{{game.referee.nameShort}}
			{{~^~}}
				???
			{{~/if~}}
			</span>{{~!-- --~}}
		</li>
	{{~/each~}}
	</ul>{{~!-- --~}}
</section>

